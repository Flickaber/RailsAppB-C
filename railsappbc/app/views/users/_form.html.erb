<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :firstname, I18n.translate('.firstname') %>
    <%= f.text_field :firstname %>
  </div>

  <div class="field">
    <%= f.label :lastname, I18n.translate('.lastname') %>
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :biography, I18n.translate('.bio') %>
    <%= f.text_area :biography %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :comments, I18n.translate('.comments') %>
    <%= f.text_area :comments %>
  </div>

  <div class="field">
    <%= f.label :price, I18n.translate('.price') %>
    <%= f.number_field :price, in: 0.01..2000.00, step: 0.01 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
